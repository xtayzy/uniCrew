unicrew.kz, www.unicrew.kz {
	encode gzip

	@api path /api/*
	handle @api {
		reverse_proxy backend:8000 {
			header_up Host {host}
			header_up X-Real-IP {remote}
			header_up X-Forwarded-For {remote}
			header_up X-Forwarded-Proto {scheme}
			transport http {
				read_timeout 180s
				write_timeout 180s
				dial_timeout 30s
			}
		}
	}

	@media path /media/*
	handle @media {
		reverse_proxy backend:8000 {
			header_up Host {host}
			header_up X-Real-IP {remote}
			header_up X-Forwarded-For {remote}
			header_up X-Forwarded-Proto {scheme}
			transport http {
				read_timeout 60s
				write_timeout 60s
			}
		}
	}

	handle {
		reverse_proxy frontend:80
	}
}


